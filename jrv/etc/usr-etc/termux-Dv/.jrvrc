#!/bin/bash

function f_info {
	echo "Title: Place in between ~/.bashrc and jv"
	echo "Use: use this file to keep ~/.bashrc esay to read"
}

# source "jv.sh" file. It will make available the "jv" command
source ~/home.home/repositories/jarve/jrv/boot/jv/jv.sh

function f_greetings {
	# Greetings: 
	tput setaf 2; echo -n "file \""; tput setaf 90; echo -n ".jrvrc"; tput setaf 2; echo -n "\" loaded"; tput sgr0
}

function f_colorVariables {
	# Define colors to use during text. Bash method:
	_RED=$(echo -en '\001\033[00;31m\002')
	_RESTORE=$(echo -en '\001\033[0m\002')

	# Define colors to use during text. tput method:

}

function f_alias {

	alias jv="bash data/data/com.termux/files/home/home.home/repositories/jarve/jrv/boot/jv/./jv"
	alias la="ls -A"
	alias .="ls"
	alias ..="cd .."
	alias jv="bash /data/data/com.termux/files/home/home.home/repositories/jarve/jrv/boot/jv/jv" 
	alias ..="cd .."
	alias ...="cd ..; cd .."
	alias ....="cd ..; cd ..; cd .."
	
	
	goto ()  {
	
		case $1 in
			--list)
				echo "it will list all goto's in the future"
			;;
			h) # Send to home dir
				cd
			;;
			rep) # Send to the dir of stored repositories. home.home will be able to sync in the future
				cd ~/home.home/repositories
			;;
			drya)
				cd  ~/home.home/repositories/DRYa
			;;
			jv)
				cd ~/home.home/repositories/jarve
			;;
			*)
				echo "that one does not exist, you will be able to create more in the future."
			;;
	esac
	}
}

function f_exec {
	#f_info
	f_greetings
	f_colorVariables
	f_alias
	# Read DRYa .bashrc
}
f_exec
